# ==================================================
# Go Shop 微服务平台 - 开发环境配置
# ==================================================

# 环境标识
ENVIRONMENT=dev
GIN_MODE=debug
LOG_LEVEL=debug

# 服务端口配置 (开发环境使用8xxx端口)
API_GATEWAY_PORT=8080
USER_SERVICE_PORT=8085
PRODUCT_SERVICE_PORT=8082
CART_SERVICE_PORT=8083
ORDER_SERVICE_PORT=8084

# 数据库配置 (开发环境)
MYSQL_PORT=3307
MYSQL_ROOT_PASSWORD=dev_root_123
MYSQL_DATABASE=gin_dev
MYSQL_USER=gin_dev_user
MYSQL_PASSWORD=gin_dev_pass

# 数据库连接配置
DB_HOST=localhost
DB_PORT=3307
DB_USER=gin_dev_user
DB_PASSWORD=gin_dev_pass
DB_NAME=gin_dev
DB_CHARSET=utf8mb4
DB_PARSE_TIME=true
DB_LOC=Local

# Redis配置 (开发环境)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_123
REDIS_DB=0

# JWT配置
JWT_SECRET=dev_jwt_secret_key_2024
JWT_EXPIRE_HOURS=24

# 文件上传配置
UPLOAD_PATH=./uploads/dev
MAX_UPLOAD_SIZE=10485760

# API配置
API_TIMEOUT=30
API_RATE_LIMIT=100

# 邮件配置 (开发环境)
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_USER=dev@example.com
SMTP_PASSWORD=dev_smtp_pass

# 微信支付配置 (开发环境)
WECHAT_APP_ID=dev_app_id
WECHAT_APP_SECRET=dev_app_secret
WECHAT_MCH_ID=dev_mch_id
WECHAT_API_KEY=dev_api_key

# 阿里云OSS配置 (开发环境)
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_ACCESS_KEY_ID=dev_access_key
OSS_ACCESS_KEY_SECRET=dev_access_secret
OSS_BUCKET_NAME=go-shop-dev

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30 