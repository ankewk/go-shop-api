# ==================================================
# Go Shop 微服务平台 - 生产环境配置
# ==================================================

# 环境标识
ENVIRONMENT=prod
GIN_MODE=release
LOG_LEVEL=warn

# 服务端口配置 (生产环境使用7xxx端口)
API_GATEWAY_PORT=7080
USER_SERVICE_PORT=7085
PRODUCT_SERVICE_PORT=7082
CART_SERVICE_PORT=7083
ORDER_SERVICE_PORT=7084

# 数据库配置 (生产环境)
MYSQL_PORT=3309
MYSQL_ROOT_PASSWORD=prod_root_789_secure
MYSQL_DATABASE=gin_prod
MYSQL_USER=gin_prod_user
MYSQL_PASSWORD=gin_prod_pass_secure

# 数据库连接配置
DB_HOST=localhost
DB_PORT=3309
DB_USER=gin_prod_user
DB_PASSWORD=gin_prod_pass_secure
DB_NAME=gin_prod
DB_CHARSET=utf8mb4
DB_PARSE_TIME=true
DB_LOC=Local

# Redis配置 (生产环境)
REDIS_HOST=localhost
REDIS_PORT=6381
REDIS_PASSWORD=prod_redis_789_secure
REDIS_DB=2

# JWT配置
JWT_SECRET=prod_jwt_secret_key_2024_ultra_secure
JWT_EXPIRE_HOURS=6

# 文件上传配置
UPLOAD_PATH=./uploads/prod
MAX_UPLOAD_SIZE=52428800

# API配置
API_TIMEOUT=120
API_RATE_LIMIT=500

# 邮件配置 (生产环境)
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_USER=prod@example.com
SMTP_PASSWORD=prod_smtp_pass_secure

# 微信支付配置 (生产环境)
WECHAT_APP_ID=prod_app_id
WECHAT_APP_SECRET=prod_app_secret
WECHAT_MCH_ID=prod_mch_id
WECHAT_API_KEY=prod_api_key

# 阿里云OSS配置 (生产环境)
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_ACCESS_KEY_ID=prod_access_key
OSS_ACCESS_KEY_SECRET=prod_access_secret
OSS_BUCKET_NAME=go-shop-prod

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=120

# 安全配置
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key

# 性能配置
MAX_CONNECTIONS=1000
WORKER_PROCESSES=4 