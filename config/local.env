# 本地开发环境配置
# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=gin_dev

# 应用配置
PORT=8080
GIN_MODE=debug
LOG_LEVEL=debug

# Redis配置 (可选)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 跨域配置
CORS_ALLOW_ORIGIN=*
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization

# 日志配置
LOG_FILE=logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=10
LOG_MAX_AGE=30

# 安全配置
JWT_SECRET=your-secret-key-here
JWT_EXPIRE_HOURS=24

# 文件上传配置
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760

# 邮件配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password 