# ==================================================
# Go Shop 微服务平台 - UAT环境配置
# ==================================================

# 环境标识
ENVIRONMENT=uat
GIN_MODE=release
LOG_LEVEL=info

# 服务端口配置 (UAT环境使用9xxx端口)
API_GATEWAY_PORT=9080
USER_SERVICE_PORT=9085
PRODUCT_SERVICE_PORT=9082
CART_SERVICE_PORT=9083
ORDER_SERVICE_PORT=9084

# 数据库配置 (UAT环境)
MYSQL_PORT=3308
MYSQL_ROOT_PASSWORD=uat_root_456
MYSQL_DATABASE=gin_uat
MYSQL_USER=gin_uat_user
MYSQL_PASSWORD=gin_uat_pass

# 数据库连接配置
DB_HOST=localhost
DB_PORT=3308
DB_USER=gin_uat_user
DB_PASSWORD=gin_uat_pass
DB_NAME=gin_uat
DB_CHARSET=utf8mb4
DB_PARSE_TIME=true
DB_LOC=Local

# Redis配置 (UAT环境)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=uat_redis_456
REDIS_DB=1

# JWT配置
JWT_SECRET=uat_jwt_secret_key_2024_secure
JWT_EXPIRE_HOURS=12

# 文件上传配置
UPLOAD_PATH=./uploads/uat
MAX_UPLOAD_SIZE=20971520

# API配置
API_TIMEOUT=60
API_RATE_LIMIT=200

# 邮件配置 (UAT环境)
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_USER=uat@example.com
SMTP_PASSWORD=uat_smtp_pass

# 微信支付配置 (UAT环境)
WECHAT_APP_ID=uat_app_id
WECHAT_APP_SECRET=uat_app_secret
WECHAT_MCH_ID=uat_mch_id
WECHAT_API_KEY=uat_api_key

# 阿里云OSS配置 (UAT环境)
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_ACCESS_KEY_ID=uat_access_key
OSS_ACCESS_KEY_SECRET=uat_access_secret
OSS_BUCKET_NAME=go-shop-uat

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60 